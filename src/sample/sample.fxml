                                        <String fx:value="Audio" />
                                        <String fx:value="Visual" />
                                        <String fx:value="Audio Mobile" />
                                        <String fx:value="Visual Mobile" />
                                    </FXCollections>
                                </items>
                        </ComboBox>
                        <Button fx:id="btn" layoutX="145.0" layoutY="228.0" mnemonicParsing="false" prefHeight="34.0" prefWidth="71.0" text="Submit" />
                        <TextField fx:id="manufact" layoutX="163.0" layoutY="101.0" />
                        <Label layoutX="11.0" layoutY="100.0" text="Manufacturer" textAlignment="CENTER">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <Separator layoutX="131.0" layoutY="25.0" orientation="VERTICAL" prefHeight="179.0" prefWidth="5.0" />
                        <Label layoutX="22.0" layoutY="44.0" text="Item Type">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <Label layoutX="8.0" layoutY="161.0" text="Product Name">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <TextField fx:id="prod" layoutX="163.0" layoutY="161.0" />
                        <Separator layoutX="-3.0" layoutY="84.0" prefHeight="3.0" prefWidth="358.0" />
                        <Separator layoutX="-7.0" layoutY="141.0" prefHeight="0.0" prefWidth="359.0" />
                        <Separator layoutX="1.0" layoutY="202.0" prefHeight="1.0" prefWidth="350.0" />
                        <Separator layoutX="1.0" layoutY="25.0" prefHeight="4.0" prefWidth="350.0" />
                     </children></AnchorPane>
            </content>
          </Tab>
          <Tab text="Log Items">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
            <Tab text="Display Table">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="productsTable" prefHeight="292.0" prefWidth="350.0">
                          <columns>
                              <TableColumn prefWidth="44.0" text="ID" fx:id="displayID" />
                              <TableColumn prefWidth="114.0" text="Manufacturer" fx:id="displayManufacturer" />
                              <TableColumn prefWidth="116.0" text="Product Name" fx:id="displayProdName" />
                              <TableColumn prefWidth="75.0" text="Type" fx:id="displayType" />
                          </columns>
                        </TableView>

                     </children></AnchorPane>
              </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</GridPane>
