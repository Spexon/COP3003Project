          <Tab text="Add New Item">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="171.0" prefWidth="304.0">

                     <children>
                        <ComboBox fx:id="items" layoutX="163.0" layoutY="44.0" onMouseClicked="#handleComboBox" prefWidth="150.0" promptText="Type">
                                <items>
                                    <!-- FXML code used from Oracle Thread https://community.oracle.com/thread/2486012 -->
